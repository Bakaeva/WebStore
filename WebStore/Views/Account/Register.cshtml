@model RegisterUserViewModel
@{
    ViewData["Title"] = "Регистрация пользователя";
}

<section id="form">
    <div class="container">
        <div class="row">
            <div class="col-sm-4">
                <div class="signup-form">
                    <h2>@ViewData["Title"]</h2> @*<h2>Привет!</h2>*@
                    <form asp-action="Register" asp-antiforgery="true">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        <input asp-for="UserName" placeholder="Имя пользователя" />
                        <span asp-validation-for="UserName" class="text-danger"></span>

                        <input asp-for="Password" placeholder="Пароль" />
                        <span asp-validation-for="Password" class="text-danger"></span>

                        <input asp-for="PasswordConfirm" placeholder="Повторите пароль" />
                        <span asp-validation-for="PasswordConfirm" class="text-danger"></span>

                        <button type="submit" class="btn btn-default">Зарегистрироваться</button>
                    </form>
                </div><!--/sign up form-->
            </div>
        </div>
    </div>
</section>
