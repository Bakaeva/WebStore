@model IEnumerable<UserOrderViewModel>
@{
    Layout = "_UserProfileLayout";
    ViewData["Title"] = "Заказы";
}

<table class="table">
    <thead>
        <tr>
            <th>№</th>
            <th>Название</th>
            <th>Телефон</th>
            <th>Адрес</th>
            <th>Стоимость</th>
            <th>Кол-во</th>
        </tr>
    </thead>
    <tbody>
        @{ var i = 1; }
        @foreach (var (_, name, phone, address, totalPrice, totalQuantity) in Model)
        {
            <tr>
                <td>@(i++)</td>
                <td>@name</td>
                <td>@phone </td>
                <td>@address</td>
                <td>@totalPrice</td>
                <td>@totalQuantity</td>
            </tr>
        }
    </tbody>
</table>